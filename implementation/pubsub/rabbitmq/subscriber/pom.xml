<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>rabbitmq</artifactId>
        <groupId>org.inaetics.dronessimulator.pubsub</groupId>
        <version>0.1</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.inaetics.dronessimulator.pubsub.rabbitmq</groupId>
    <artifactId>rabbitmq-subscriber</artifactId>
    <version>0.1</version>
    <packaging>bundle</packaging>
    <name>RabbitMQ subscriber</name>

    <dependencies>
        <dependency>
            <groupId>org.inaetics.dronessimulator.pubsub.rabbitmq</groupId>
            <artifactId>rabbitmq-common</artifactId>
            <version>0.1</version>
        </dependency>
        <dependency>
            <!-- This should fix some issues with the RabbitMQ client in OSGI -->
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.21</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>org.inaetics.dronessimulator.pubsub.rabbitmq.subscriber,org.inaetics.dronessimulator.pubsub.rabbitmq.common</Export-Package>
                        <Bundle-Activator>org.inaetics.dronessimulator.pubsub.rabbitmq.subscriber.Activator</Bundle-Activator>
                        <Embed-Dependency>api;groupId=org.inaetics.dronessimulator.pubsub;scope=compile|runtime,amqp-client;scope=compile|runtime,slf4j-api;scope=compile|runtime</Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>
                        <Import-Package>!com.codahale.metrics,!org.slf4j.impl,*</Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>